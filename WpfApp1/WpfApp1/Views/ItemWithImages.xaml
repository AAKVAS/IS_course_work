<local:ItemForm x:Class="WpfApp1.Views.ItemWithImages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ItemForm" Height="450" Width="394">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/ButtonTheme.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"></StackPanel>

        <StackPanel Grid.Row="1" Margin="10">
            <ListBox Height="100"></ListBox>
            <Button HorizontalAlignment="Right" Margin="10, 5" Width="90" Template="{StaticResource commonButton}">Добавить</Button>
        </StackPanel>

        <DockPanel Grid.Row="2" Margin="10">
            <Button Margin="10, 0" Width="90" HorizontalAlignment="Left" Template="{StaticResource commonButton}">Сохранить</Button>
            <Button Margin="10, 0" Width="90" HorizontalAlignment="Right" Template="{StaticResource commonButton}">Закрыть</Button>
        </DockPanel>
    </Grid>
</local:ItemForm>
