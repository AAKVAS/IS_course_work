<Window x:Class="WpfApp1.Views.ItemWithImages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="ItemForm" Height="450" Width="394">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0"></StackPanel>

        <StackPanel Grid.Row="1">
            <ListBox Height="100"></ListBox>
            <Button HorizontalAlignment="Right" Margin="10">Добавить</Button>
        </StackPanel>

        <Grid Grid.Row="2">
            <Button Margin="10" Width="70" HorizontalAlignment="Left">Сохранить</Button>
            <Button Margin="10" Width="70" HorizontalAlignment="Right">Закрыть</Button>
        </Grid>
    </Grid>
</Window>
